<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXT INPUT LAYOUT -->
    <!-- TextInputLayout -->
    <style name="textInputLayout">
        <item name="android:textColorHint">@color/color4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- EditText -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/aeonikbold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/color3</item>
        <item  name="android:background">@color/transparente</item>
        <item name="android:textSize">17dp</item>
    </style>


    <style name="botonVerde">
        <item name="android:backgroundTint">@color/color3</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="botonNegro" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="alpha">1</item>
        <item name="android:state_pressed">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/color3</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/color3</item>
    </style>

</resources>