<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textInputLayout">
        <item name="android:textColorHint">@color/Teal</item>
<!--        cambiar color al escribir en los edit TEXT-->
        <item name="android:textColor">@color/Teal4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- EditText -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/aeonikbold</item>
        <item name="android:textColorHint">@color/negroApp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/Teal4</item>
        <item  name="android:background">@color/transparente</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="estiloTitulo">
        <item name="fontFamily">@font/bebasneueregular</item>
        <item name="android:textColor">@color/verdeApp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60dp</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="botonVerde">
        <item name="android:backgroundTint">@color/Teal</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/blancoApp</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/blancoApp</item>
    </style>

    <style name="botonNegro" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="alpha">1</item>
        <item name="android:state_pressed">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/Teal4</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/Teal4</item>
    </style>

    <style name="tituloapp">
        <!--     El color de la sombra-->
        <item name="android:shadowColor">@color/negroApp</item>
        <!--     El radio o expansiÃ³n que queremos-->
        <item name="android:shadowRadius">10</item>
        <!--     El desplazamiento horizontal-->
        <item name="android:shadowDx">2</item>
        <!--     El desplazamiento vertical-->
        <item name="android:shadowDy">5</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>