<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- TextInputLayout -->
    <style name="textInputLayout">
        <item name="android:textColorHint">@color/Teal</item>
        <!-- cambiar color al escribir en los EditText -->
        <item name="android:textColor">@color/Teal4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!-- TextInputLayout -->
    <style name="textInputLayoutBloqueado">
        <item name="android:textColorHint">@color/Teal</item>
        <!-- cambiar color al escribir en los EditText -->
        <item name="android:textColor">@color/Teal4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <!-- EditText -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:fontFamily">@font/aeonikbold</item>
        <item name="android:textColorHint">@color/negroApp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/Teal4</item>
        <item name="android:background">@color/transparente</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- Titulo -->
    <style name="estiloTitulo">
        <item name="fontFamily">@font/bebasneueregular</item>
        <item name="android:textColor">@color/verdeApp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">60sp</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <!-- Boton Estilo 1 -->
    <style name="botonVerde">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/Teal</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/blancoApp</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/blancoApp</item>
    </style>

    <!-- Boton inverso al Boton Estilo 1 -->
    <style name="botonInverso" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="alpha">1</item>
        <item name="android:state_pressed">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/Teal</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/Teal</item>
    </style>

    <!-- Boton rojo -->
    <style name="botonRojo" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorRojo</item>
        <item name="alpha">1</item>
        <item name="android:state_pressed">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Titulo de la aplicacion -->
    <style name="tituloapp">
        <!-- El color de la sombra -->
        <!--<item name="android:shadowColor">@color/negroApp</item> -->
        <!-- El radio o expansiÃ³n que queremos -->
        <item name="android:shadowRadius">10</item>
        <!-- El desplazamiento horizontal -->
        <item name="android:shadowDx">2</item>
        <!-- El desplazamiento vertical -->
        <item name="android:shadowDy">5</item>
    </style>

    <!-- Temas de la app -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>