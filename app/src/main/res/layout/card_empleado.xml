<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardEmpleado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- CardView empleado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cadViewEmpleado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <!-- LinearLayout empleado horizontal -->
        <LinearLayout
            android:id="@+id/horizontalLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- ImageView foto empleado -->
            <ImageView
                android:id="@+id/imagenEmpleadoCard"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                tools:srcCompat="@drawable/ic_persona_foreground" />

            <!-- LinearLayout empleado vertical -->
            <LinearLayout
                android:id="@+id/verticalLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:padding="@dimen/cardview_compat_inset_shadow">

                <!-- TextView nombre empleado -->
                <TextView
                    android:id="@+id/tvnombreEmpleadoCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/cardview_compat_inset_shadow"
                    android:text="TextView"
                    android:textColor="@color/Teal"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="DNI: "
                        android:textSize="20dp" />
                    <!-- TextView DNI empleado -->
                    <TextView
                        android:id="@+id/tvDNIEmpleadoCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="TextView"
                        android:textSize="20dp" />
                </LinearLayout>


                <!-- TextView direccion empleado -->
                <TextView
                    android:id="@+id/tvTelefonoEmpleado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="TextView"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
